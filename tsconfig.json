{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@http-client": ["src/http-client"],
      "@routes": ["src/routes"],
      "@schemas/*": ["src/schemas/*"],
      "@screens/*": ["src/screens/*"],
      "@theme": ["src/theme"],
    }
  }
}
